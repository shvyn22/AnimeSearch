<resources>
    <style name="Theme.AnimeSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black_700</item>

        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryVariant">@color/purple_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/purple_300</item>
        <item name="colorOnSurface">@color/black_700</item>

        <item name="android:colorBackground">@color/purple_50</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WideButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_button_small</item>
    </style>

    <style name="RectangularButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_button_large</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:minWidth">@dimen/width_min</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">@dimen/padding_normal</item>
        <item name="iconSize">@dimen/size_icon</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">6dp</item>
    </style>
</resources>