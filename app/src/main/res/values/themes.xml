<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_400</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/gray_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WideButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_button_small</item>
    </style>

    <style name="RectangularButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_button_large</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:minWidth">@dimen/width_min</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">@dimen/padding_normal</item>
        <item name="iconSize">@dimen/size_icon</item>
    </style>

    <style name="CardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="elevation">6dp</item>
    </style>
</resources>